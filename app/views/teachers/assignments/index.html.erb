<%= render_page_header("#{@assignments.count} assignments") %>
<%= render partial: 'students/submissions/homework' %>
<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <td>Username</td>
          <td>Latest Answer</td>
          <td>Time Submitted</td>
        </tr>
      </thead>
      <tbody>
        <%- @assignments.each do |a| %>
          <tr>
            <td><%= link_to a.user.username, teachers_homework_assignment_path(@homework, a) %></td>
            <td><%= a.latest_submission.answer %></td>
            <td><%= print_submission_time(a.latest_submission.created_at, @homework.due_date) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @assignments %>
  </div>
</div>